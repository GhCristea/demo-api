{
  "name": "demo-api",
  "version": "1.0.0",
  "type": "module",
  "description": "Zero-dependency REST API: Bun + ReScript + rescript-schema",
  "bin": {
    "demo-api": "dist/index.js"
  },
  "scripts": {
    "dev":        "bun run src/index.res",
    "build":      "rescript build -to-js",
    "watch":      "rescript build -to-js -w",
    "start":      "bun dist/index.js",
    "test":       "bun test",
    "test:watch": "bun test --watch",
    "db:migrate": "bun db/migrate.js",
    "db:seed":    "bun db/seed.js"
  },
  "dependencies": {
    "bun": "latest",
    "rescript": "^11.1.0",
    "rescript-schema": "^2.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "keywords": ["bun", "rescript", "rest", "api", "zero-dependency", "minimal"],
  "author": "Gheorghita Cristea",
  "license": "MIT"
}
