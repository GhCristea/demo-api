@baseUrl = http://localhost:3001/rest
@contentType = application/json

###
# @name getItems
# Get all items
GET {{baseUrl}}/items

###
# @name getItem
# Get an item
# @prompt id enter the item id
GET {{baseUrl}}/items/{{id}}


###
# @name createItems
# Create new items

POST {{baseUrl}}/items HTTP/1.1
Content-Type: {{contentType}}

[
    {
        "name": "Item new 1"
    },
    {
        "name": "Item new 2"
    }
]

###
# @name createItem
# Create new item

POST {{baseUrl}}/items HTTP/1.1
Content-Type: {{contentType}}

{
    "name": "Item new 1"
}

###
# @name updateItems
# Update existing items
# @prompt id1 enter the item id 1
# @prompt id2 enter the item id 2
PUT {{baseUrl}}/items HTTP/1.1
Content-Type: {{contentType}}

[
    {
        "id": "{{id1}}",
        "name": "Item updated 1"
    },
    {
        "id": "{{id2}}",
        "name": "Item updated 2"
    }
]

###
# @name updateItem
# Update an existing item
# @prompt id enter the item id
PUT {{baseUrl}}/items/{{id}} HTTP/1.1
Content-Type: {{contentType}}

{
    "id": "{{id}}",
    "name": "Item 1"
}

###
# @name deleteItems
# Delete existing items
# @prompt id1 enter the item id 1
# @prompt id2 enter the item id 2
DELETE {{baseUrl}}/items HTTP/1.1
Content-Type: {{contentType}}

[
    {
        "id": "{{id1}}"
    },
    {
        "id": "{{id2}}"
    }
]

###
# @name deleteItem
# Delete an existing item
# @prompt id enter the item id
DELETE {{baseUrl}}/items/{{id}}
